extends /card

block content

  //- front of the card
  div.front
    .heading-img(style='background-image: no-repeat url(' + locals.img + ') center center;')

    .card-heading
      h3= locals.title
      h5= 'Make a booking enquiry'

    .shifting-select.months
      .inner
        each month in locals.months
          if month.name
            a(data-index=month.index href="#")= month.name
          else
            div=month

    .shifting-select.days
      .inner
        - for (var i=1; i<=30; i++) {
            a(href="#")= i
        - }

    .shifting-select.hours
      .inner
        each hour in locals.hours
          a(href="#")= hour


    a.make-booking.disabled
      span= 'Make booking'
      span= '>'

  //- back of the card
  div.back
    a#flip= 'flip back'
