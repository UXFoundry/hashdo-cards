extends /card

block header
  if !locals.maintenance
    .hdc-hdr
      img(src='https://cdn.hashdo.com/icons/meandyousim.png', width='24px', height='23px')
      .hdc-title
        .name= locals.name
        .number= '0' + locals.number.substr(2)

    .hdc-subhdr
      | Account usage
      .date For #{locals.date}

block content
  if !locals.maintenance
    div!= locals.valueBundles
    div!= locals.dataBundles

  if locals.maintenance
    .maintenance